#!/bin/bash
#SBATCH --job-name=ping_pong
#SBATCH --output=ping_pong-n2.out
#SBATCH --error=ping_pong-n2.err
#SBATCH --time=00:10:00
#SBATCH --account=h039v
#SBATCH --partition=micro
#SBATCH --nodes=2
#SBATCH --ntasks=2
#SBATCH --ear=off

module load slurm_setup

export SLURM_CPU_BIND=verbose

echo "Config 3: Different nodes"
export SRUN_CONFIG=" --sockets-per-node=1 --cores-per-socket=1 --threads-per-core=1"
source ping_pong_loop.sh
